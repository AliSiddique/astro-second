---
import { integrations } from "../../data/integrations.json";
import IntegratioDetails from "@/components/integrations/IntegrationDetails.astro";
---

<section x-data="{ open: false }">
  <div class="relative max-w-screen-xl px-8 py-24 mx-auto md:px-12 lg:px-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 items-end gap-8">
      <div>
        <span
          class="font-mono text-xs font-medium tracking-tight text-blue-600 uppercase"
        >
          integrations
        </span>
        <p class="mt-8 text-4xl font-semibold tracking-tighter text-blue-950">
          Dozens of apps <span
            class="md:block md:text-transparent md:bg-clip-text md:bg-gradient-to-r from-blue-500 to-indigo-600 py-2"
          >
            Endless possibilities.
          </span>
        </p>
      </div>
      <p class=" text-base text-gray-700 lg:text-base">
        Enhance your Linear experience with a wide variety of add-ons and
        integrations. From everyday essentials to powerful pro workflows.
      </p>
    </div>
    <div
      class="grid grid-cols-1 gap-10 items-start xl:gap-24 lg:grid-cols-3 mt-12 lg:mt-24"
    >
      <nav class="lg:sticky lg:top-20">
        <ul class="text-xs text-gray-700 space-y-3  border-l" role="list">
          <li>
            <a
              class="font-mono text-xs font-medium tracking-tight text-blue-950 uppercase hover:text-blue-700 pl-4 hover:border-l-2 duration-200 hover:translate-x transition-all hover:border-blue-500"
              href="#Alfred"
              >Popular apps via Alfred
            </a>
          </li><li>
            <a
              class="font-mono text-xs font-medium tracking-tight text-blue-950 uppercase hover:text-blue-700 pl-4 hover:border-l-2 duration-200 hover:translate-x transition-all hover:border-blue-500"
              href="#cloud"
              >Bank to Cloud hardware
            </a>
          </li><li>
            <a
              class="font-mono text-xs font-medium tracking-tight text-blue-950 uppercase hover:text-blue-700 pl-4 hover:border-l-2 duration-200 hover:translate-x transition-all hover:border-blue-500"
              href="#worflow"
              >Media and workflow
            </a>
          </li>
        </ul>
      </nav>

      <div class="lg:col-span-2 space-y-24">
        <div class="scroll-mt-24" id="Alfred">
          <p
            class="font-mono text-base font-medium tracking-tighter uppercase text-blue-950"
          >
            Personalized financial advice
          </p>

          <div
            class="relative mt-8 grid gap-2 sm:grid-cols-2 xl:grid-cols-3 wöf"
          >
            {
              integrations.slice(0,4).map((template) => (
                <>
                  <div x-data="{ open: false }" class="">
                    <button
                      x-on:click="open = true"
                      class="bg-white p-6 w-full rounded-xl shadow-box shadow-gray-500/20"
                    >
                      <div class="inline-flex gap-2 items-center">
                        <img class="h-6" src={template.image} alt="" />
                        <p class=" font-mono text-base font-medium tracking-tighter uppercase  ">
                          {template.name}
                        </p>
                      </div>
                    </button>
                    <IntegratioDetails />
                  </div>
                </>
              ))
            }
          </div>
        </div>
        <div class="scroll-mt-24" id="cloud">
          <p
            class="font-mono text-base font-medium tracking-tighter uppercase text-blue-950"
          >
            BANK TO CLOUD HARDWARE
          </p>

          <div
            class="relative mt-8 grid gap-2 sm:grid-cols-2 xl:grid-cols-3 wöf"
          >
            {
              integrations.slice(4,7).map((template) => (
                <>
                  <div x-data="{ open: false }" class="">
                    <button
                      x-on:click="open = true"
                      class="bg-white p-6 w-full rounded-xl shadow-box shadow-gray-500/20"
                    >
                      <div class="inline-flex gap-2 items-center">
                        <img class="h-6" src={template.image} alt="" />
                        <p class=" font-mono text-base font-medium tracking-tighter uppercase  ">
                          {template.name}
                        </p>
                      </div>
                    </button>
                    <IntegratioDetails />
                  </div>
                </>
              ))
            }
          </div>
        </div>
        <div class="scroll-mt-24" id="worflow">
          <p
            class="font-mono text-base font-medium tracking-tighter uppercase text-blue-950"
          >
          MEDIA AND WORKFLOW

          </p>

          <div
            class="relative mt-8 grid gap-2 sm:grid-cols-2 xl:grid-cols-3 wöf"
          >
            {
              integrations.slice(7,12).map((template) => (
                <>
                  <div x-data="{ open: false }" class="">
                    <button
                      x-on:click="open = true"
                      class="bg-white p-6 w-full rounded-xl shadow-box shadow-gray-500/20"
                    >
                      <div class="inline-flex gap-2 items-center">
                        <img class="h-6" src={template.image} alt="" />
                        <p class=" font-mono text-base font-medium tracking-tighter uppercase  ">
                          {template.name}
                        </p>
                      </div>
                    </button>
                    <IntegratioDetails />
                  </div>
                </>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
