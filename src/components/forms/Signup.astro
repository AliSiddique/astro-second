<section class="relative overflow-hidden">
  <div
    class="flex flex-col items-center pt-12 pb-6 lg:flex-row relative h-screen"
  >
    <div class="max-w-xl px-8 md:pr-12 lg:pr-44 lg:pb-0 order-last">
      <p
        class=" text-4xl font-semibold tracking-tighter text-blue-950 lg:text-7xl"
      >
        Sing up to <span
          class="lg:block md:text-transparent md:bg-clip-text md:bg-gradient-to-r from-blue-500 to-indigo-600 py-2"
          >Alfred</span
        >
      </p>
      <form action="#" class="mt-12">
        <div class="flex-col flex gap-1 mt-8">
          <div class="col-span-full">
            <label for="first_name" class="sr-only">First name</label><input
              id="first_name"
              type="text"
              name="first_name"
              autocomplete="given-name"
              required=""
              placeholder="Your name"
              class="block w-full h-12 px-4 py-3 placeholder-gray-500 bg-white border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset text-xs"
            />
          </div>
          <div class="col-span-full">
            <label for="last_name" class="sr-only">Last name</label><input
              id="last_name"
              type="text"
              name="last_name"
              autocomplete="given-name"
              required=""
              placeholder="Your last name"
              class="block w-full h-12 px-4 py-3 placeholder-gray-500 bg-white border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset text-xs"
            />
          </div>
          <div class="col-span-full">
            <label for="email" class="sr-only">Email</label><input
              id="email"
              type="email"
              name="email"
              autocomplete="given-name"
              required=""
              placeholder="example@lexingtonthemes.com"
              class="block w-full h-12 px-4 py-3 placeholder-gray-500 bg-white border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset text-xs"
            />
          </div>
          <div class="col-span-full">
            <label name="company" class="sr-only"> Email</label><input
              type="email"
              class="block w-full h-12 px-4 py-3 placeholder-gray-500 bg-white border-0 rounded-lg appearance-none text-blue-500 focus:border-blue-500 focus:bg-white focus:outline-none focus:ring-blue-500 focus:ring-inset text-xs"
              placeholder="Your password "
              value="********"
            />
          </div>
        </div>
        <div class="col-span-full mt-2">
          <button
            type="submit"
            class="flex items-center justify-center h-10 px-4 py-2 text-sm font-semibold text-white duration-200 rounded-full bg-gradient-to-b from-blue-500 to-blue-600 hover:to-blue-700 shadow-button shadow-blue-600/50 focus:ring-2 focus:ring-blue-950 focus:ring-offset-2 ring-offset-gray-200 hover:shadow-none w-full"
          >
            Submit your message
          </button>
        </div>
        <div class="mt-4 text-xs">
          <p class="text-gray-700">
           Already have an account?<a
              class="text-blue-700 hover:blue-950 ml-2"
              href="/forms/login">Sing in instead</a>
          </p>
        </div>
      </form>
    </div>
    <div class="items-center hidden relative mx-auto lg:grid grid-cols-1">
      <div class="flex flex-col flex-shrink-0 lg:animate-scrollerUp gap-2">
        <img
          class="rounded-3xl shadow-box shadow-blue-500/50 tilt-card rotate-12"
          src="/card1.svg"
          alt=""
        />
        <img
          class="rounded-3xl shadow-box shadow-gray-500/20 tilt-card -rotate-6"
          src="/card2.svg"
          alt=""
        />
        <img
          class="rounded-3xl shadow-box shadow-blue-950/20 tilt-card -rotate-45"
          src="/card3.svg"
          alt=""
        />
      </div>
    </div>
  </div>
</section>
