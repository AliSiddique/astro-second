---
const { title, url, description, pubDate, author, image } = Astro.props;
---



<li >
  <a href={url} title={title} class="group relative">
    <article
      class=" h-full flex flex-col  "
    >
      <div class="block w-full lg:col-span-2">
        <img
          class="aspect-[384/246] object-cover bg-center h-full rounded-3xl shadow-box shadow-gray-500/30"
          src={image}
          alt={title}
        />
      </div>
      <div class="flex flex-col items-start justify-between  w-full pt-8">
        <div class="w-full">
          <div>
            <p
              class="font-mono text-base font-medium tracking-tighter uppercase text-blue-950"
            >
              {title}
            </p>
          </div>
          <p class="mt-2 text-xs text-gray-700 line-clamp-3">
            {description}
          </p>
        </div>
        <footer>
          <div class="inline-flex space-x-1 items-center mt-6 ">
            <p
              class="font-mono text-xs font-medium tracking-tight text-blue-950 uppercase"
            >
              {author}
            </p>
            <span aria-hidden="true">&middot;</span>
            <div class="flex text-xs text-gray-500">
              <time datetime="2020-03-16"> {pubDate}</time>
            </div>
          </div>
        </footer>
      </div>
    </article>
  </a>
</li>
